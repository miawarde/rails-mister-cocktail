<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :ingredient_id, :collection => @ingredients %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
